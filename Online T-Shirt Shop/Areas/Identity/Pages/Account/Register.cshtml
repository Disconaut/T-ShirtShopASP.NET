<section class=" align-items-center justify-content-center d-flex flex-column">

    <h1 class="display-3 section-header">
        <span class="header-text"> Registration</span>
        <span class="header-underline"></span>

    </h1>
    <form class="w-50" asp-route-returnUrl="@Model.ReturnUrl" metod="post">
        <div class="col">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row justify-content-around">
                <div class="col-sm-6 form-group">
                    <label for="fname" asp-for="Input.FirstName">First Name:</label>
                    <input id="fname" class="form-control" placeholder="First Name" type="text" asp-for="Input.FirstName"/>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                </div>
                <div class="col-sm-6 form-group">
                    <label for="lname" asp-for="Input.LastName">Last Name:</label> 
                    <input id="lname" class="form-control" placeholder="Last Name" type="text" asp-for="Input.LastName"/>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group">
                <label for="phoneNumb" id="phoneLable" asp-for="Input.PhoneNumber"> Phone number: </label> 
                <input id="phoneNumb" class="form-control" placeholder="Phone Numb" type="tel" asp-for="Input.PhoneNumber"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label for="email" id="emailLable" asp-for="Input.Email">Your E-mail:</label>
                <input id="email" class="form-control" placeholder="E-mail" type="email" asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password" style="font-family: 'Avenir'" asp-for="Input.Password">Create your password:</label>
                <input id="password" class="form-control" placeholder="Password" asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label for="confirm-password" asp-for="Input.ConfirmPassword">Confirm password:</label>
                <input id="confirm-password" class="form-control" placeholder="Password" asp-for="Input.ConfirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            </div>

            <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input">
                <label class="custom-control-label">Agree with privacy policy.</label>
            </div>

            <div class="form-group">

                <div class="btn btn-primary rounded-0 w-100 mt-3">
                    <button class="btn btn-primary rounded-0">Registration</button>
                </div>
            </div>

        </div>

    </form>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
