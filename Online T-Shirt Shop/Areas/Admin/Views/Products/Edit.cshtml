@model Online_T_Shirt_Shop.Areas.Admin.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label asp-for="Image" class="custom-file-label"></label>
                    <input asp-for="Image" class="custom-file-input" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var sex in Enum.GetValues(typeof(TShirtSex)))
                {
                    <div class="custom-control-inline custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.Sex, sex, new { id = "sex" + sex.ToString(), @class = "custom-control-input" })
                        @Html.LabelFor(model => model.Sex, sex.ToString(), new { @for = "sex" + sex.ToString(), @class = "custom-control-label" })
                    </div>
                }
            </div>
            <div class="form-group">
                @foreach (var age in Enum.GetValues(typeof(TShirtAge)))
                {
                    <div class="custom-control-inline custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.Age, age, new { id = "age" + age.ToString(), @class = "custom-control-input" })
                        @Html.LabelFor(model => model.Age, age.ToString(), new { @for = "age" + age.ToString(), @class = "custom-control-label" })
                    </div>
                }
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="price-prepend">₴</span>
                    </div>
                    <input class="form-control" asp-for="Price" aria-describedby="price-prepend" />
                </div>
                <span asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/file_input.js"></script>
}