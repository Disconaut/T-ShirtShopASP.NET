@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}
@section Scripts{
    <script src="~/js/homepage.js"></script>
}

<section id="home-page-header">
    <div id="home-page-banner" class="bg-primary jumbotron jumbotron-fluid py-6 mb-4 px-6 px-md-0">
        <h1 class="font-weight-bold text-center text-uppercase text-white">Free shipping</h1>
        <p class="font-weight-bold text-white text-center text-uppercase">ON ORDERS OVER $50 - USE COUPON CODE OVER50</p>
        <div class="row justify-content-md-center mx-0 mt-6">
            <div class="col col-md-auto pr-md-6 pr-1 pl-0">
                <button class="btn btn-outline-light rounded-0 font-weight-bold">Shop Women</button>
            </div>
            <div class="col col-md-auto pl-md-6 pl-1 pr-md-6 pr-0">
                <button class="btn btn-outline-light rounded-0 font-weight-bold">Shop Men</button>
            </div>
            <div class="col-12 col-md-auto pl-md-6 pl-0 pr-0 mt-2 mt-md-0">
                <button class="btn btn-outline-light rounded-0 font-weight-bold">Shop Kids</button>
            </div>
        </div>
    </div>
    <div class="row mx-0">
        <img class="col-lg-6 col-12 responsive-cover-img px-0 order-sm-last mb-4 mb-sm-0" src="~/assets/img/large_poster.jpg" alt="There must be man and woman" />
        <img class="col-lg-3 col-sm-6 col-12 responsive-cover-img pl-0 pr-0 pr-sm-2 pr-lg-4 mb-4 mb-lg-0" src="~/assets/img/small_woman_poster.jpg" alt="There must be woman" />
        <img class="col-lg-3 col-sm-6 col-12 responsive-cover-img pl-0 pr-0 pl-sm-2 pl-lg-0 pr-lg-4 mb-sm-4 mb-lg-0" src="~/assets/img/small_man_poster.jpg" alt="There must be man" />
    </div>
</section>
<section id="new-arrivals-section" class="d-flex flex-column mt-sm-6 mt-3">
    <h1 class="display-2 section-header mb-sm-16 mb-6">
        <span class="header-text">New arrivals</span>
    <span class="header-underline"></span>
        </h1>
    <ul id="shop" class="row row-cols-1 row-cols-md-2 row-cols-xl-4 list-unstyled mb-sm-12 mb-6 mx-0">
        @foreach (var product in Model)
        {
            <li class="col p-sm-9 p-4">
                <div class="card border-0 h-100">
                    <a class="flex-grow-1" href="#">
                        <img src="~/assets/img/product_img/@product.ImagePath" class="card-img-top h-100 rounded-0" alt="I'm product"/>
                    </a>
                    <div class="card-body flex-grow-0 px-0 pt-4 pb-0">
                        <a class="text-dark text-decoration-none" asp-action="Product" asp-route-id="@product.Id"><h5 class="card-title font-weight-normal">@product.Name</h5></a>
                        <p class="card-text text-primary">₴@product.Price</p>
                    </div>
                </div>
            </li>
        }
    </ul>
    <div class="btn-group align-self-center">
        <a class="btn btn-outline-primary rounded-0 font-weight-bold px-12" asp-controller="Shop" asp-action="All">Shop All</a>
        <a class="btn btn-primary rounded-0 text-white align-baseline" asp-controller="Shop" asp-action="All"><i class="fas fa-chevron-right"></i></a>
    </div>
</section>