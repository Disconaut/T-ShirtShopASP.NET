<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online T-Shirt Shop</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/all.css"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="brand-logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index">V E T O L</a>
                </div>
                    @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark">Shop All</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark">Women</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark">Men</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark">Kids</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-right">
                        <div class="login-link-container">
                            <a class="login-link nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-user-circle"></i>Log In</a>
                        </div>
                        <div class="cart-but"><i class="fas fa-shopping-bag"></i><span id="item-count-crt" class="cart-counter">0</span></div>
                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Online_T_Shirt_Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
