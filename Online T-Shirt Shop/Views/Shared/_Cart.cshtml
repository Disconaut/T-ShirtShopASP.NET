@using Microsoft.AspNetCore.Identity
@using Online_T_Shirt_Shop.Areas.Identity.Data
@using Online_T_Shirt_Shop.Data

@{
    decimal totalPrice = 0;
}

@inject ShopContext DbContext
@inject UserManager<Consumer> UserManager

    <div id="cart-modal" role="dialog" tabindex="-1" class="modal fade show">
        <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">My basket</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    @foreach (var item in DbContext.CartItems.Where(item => item.ConsumerId == UserManager.GetUserId(User)))
                    {
                        {
                            DbContext.Entry(item).Reference(e => e.Product).Load();
                            totalPrice += item.Product.Price * item.Quantity;
                        }
                        <div class="row product">
                            <div class="col-xl-2 text-center"><img src="~/assets/img/product_img/@item.Product.ImagePath" width="100" /></div>
                            <div class="col-xl-10">
                                <div class="row">
                                    <div class="col-xl-3">
                                        <h1>@item.Product.Name</h1>
                                    </div>

                                    <div class="col-auto ml-auto">
                                        <form class="form-inline cart-form" method="post">
                                            @Html.HiddenFor(modelItem => item.ConsumerId, new { Value = item.ConsumerId, Id = "consumer-product-" + item.Product.Id})
                                            @Html.HiddenFor(modelItem => item.ProductId, new { Value = item.ProductId, Id = "product-id-" + item.Product.Id })
                                            <input id="quantity-@item.ProductId" asp-for="@item.Quantity" class="mt-3 w-100" />
                                        </form>
                                    </div>
                                </div>
                                <h5 class="mt-3">Price: ₴@(item.Product.Price * item.Quantity)</h5>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer"><span>Price: ₴@totalPrice</span><button class="btn btn-light" type="button" data-dismiss="modal">Close</button><form asp-action="ClearCart" method="post"><button id="orderBtn" class="btn btn-primary" type="submit">Order</button></form></div>
            </div>
        </div>
        <script src="~/js/cart.js"></script>
    </div>


